@model CTP.Models.BookManager
<div class="main__title">Booklets & Charts</div>
<div class="main__description">Available for Order</div>
<div class="page-content">
    <div class="filter">
        <span class="filter__sortby">
            <span class="filter__sortby__text">Sort By</span>
            <select class="filter__sortby__select" id="booklet-sort">
                <option value="title">Title</option>
                <option value="author">Author</option>
                <option value="price">Price</option>
            </select>@*filter__sortby__select*@
        </span>@*filter__sortby*@
    </div>@*filter*@
    <div class="table">
        <div class="table__grid" id="tblBooklets">
            @foreach (var item in Model.booklets.OrderBy(x => (x.title.Replace(@"""", ""))))
            {
                <div class="table__grid__item">
                    <a asp-controller="Home" asp-action="ViewBooklet" asp-route-id="@item.id">
                        <img src="~/images/covers/booklets/@item.frontcover" class="grid-item-image">
                        <div class="grid-item-title">@item.title</div>
                        <div class="grid-item-author">@item.author</div>
                        <div class="grid-item-price">$@item.price</div>
                    </a>
                </div>
            }
        </div>
    </div>@*table*@
</div>@*page-content*@
