@model CTP.Models.BookManager
<div class="main__title main__title--homepage">CTP Management Panel</div>
<div class="main__description">Manage all book listings</div>
<div class="content">
    <div class="content__block" id="ebook-block">
        <a asp-controller="Admin" asp-action="Ebooks" class="link-block">
            <img src="~/images/ebookimage.jpg" class="homepage-image">
            <div class="content__block__overlay">
                <div class="overlay-title">eBooks</div>
                <div class="overlay-description">View all listings, create new listings, and edit or delete exisiting listings.</div>
            </div>@*content__block__overlay*@
        </a>@*link-block*@
    </div>@*content__block*@
    <div class="content__block" id="book-block">
        <a asp-controller="Admin" asp-action="Ministry" class="link-block">
            <img src="~/images/bookimage.jpg" class="homepage-image">
            <div class="content__block__overlay">
                <div class="overlay-title">Ministry</div>
                <div class="overlay-description">View all listings, create new listings, and edit or delete exisiting listings.</div>
            </div>@*content__block__overlay*@
        </a>@*link-block*@
    </div>@*content__block*@
    <div class="content__block" id="study-block">
        <a asp-controller="Admin" asp-action="Expositions" class="link-block">
            <img src="~/images/studyimage.jpg" class="homepage-image">
            <div class="content__block__overlay">
                <div class="overlay-title">Biblical Expositions</div>
                <div class="overlay-description">View all listings, create new listings, and edit or delete exisiting listings.</div>
            </div>@*content__block__overlay*@
        </a>@*link-block*@
    </div>@*content__block*@
    <div class="content__block" id="booklet-block">
        <a asp-controller="Admin" asp-action="Booklets" class="link-block">
            <img src="~/images/bookletimage.jpg" class="homepage-image">
            <div class="content__block__overlay">
                <div class="overlay-title">Booklets</div>
                <div class="overlay-description">View all listings, create new listings, and edit or delete exisiting listings.</div>
            </div>@*content__block__overlay*@
        </a>@*link-block*@
    </div>@*content__block*@
</div>@*content*@